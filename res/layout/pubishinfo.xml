<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/seahome"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
         >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/infotitle" />

        <EditText
            android:id="@+id/infotitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="8.89"
            android:hint="@string/titletishi" />
    </LinearLayout>
        
        <LinearLayout
       		android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20dp"
   	   		 >
   	   	<!-- <ImageButton
			android:id="@+id/qgdatebtn"
			android:src="@drawable/date"
			android:layout_width="30dp"
			android:layout_height="30dp"
		/> -->
		<Button
		    android:id="@+id/qgdatebtn"
		    android:layout_width="50dp"
		    android:layout_height="50dp"
		    android:text="@string/date"
		    android:textSize="15sp"
		    />
        <TextView
            android:id="@+id/publishdate"
            android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="xxxx-xx-xx"
		    android:textSize="20sp"
		    android:gravity="center_vertical"
		    android:layout_marginTop="10dp"
		    android:layout_marginLeft="10dp"
           />
        <!-- <ImageButton
			android:id="@+id/qgtimebtn"
			android:src="@drawable/time"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:layout_marginLeft="10dp"
		/> -->
		<Button
		    android:id="@+id/qgtimebtn"
		    android:layout_width="50dp"
		    android:layout_height="50dp"
		    android:textSize="15sp"
		    android:text="@string/time"
		    />
        <TextView
            android:id="@+id/qgtime"
             android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="00:00"
		    android:textSize="20sp"
		    android:gravity="center_vertical"
		    android:layout_marginTop="10dp"
		    android:layout_marginLeft="10dp"
           />
        </LinearLayout>

          <TextView 
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:text="@string/infocontext"
             android:layout_marginLeft="20dp"
             android:layout_marginTop="10dp"
             />
        <ScrollView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
         <EditText 
             android:id="@+id/infocontext"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:lines="9"
             android:hint="@string/texttishi"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
             />
        </ScrollView>
         <LinearLayout
       		android:orientation="horizontal"
			android:paddingTop="20dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20dp"
   	    >
         <ImageButton
			android:id="@+id/publishbtn"
			android:src="@drawable/submit"
			android:layout_width="50dp"
			android:layout_height="40dp"
		/>
         <ImageButton
			android:id="@+id/exitbtn"
			android:src="@drawable/back"
			android:layout_width="50dp"
			android:layout_height="40dp"
			android:layout_marginLeft="20dp"
		/>
        </LinearLayout>
</LinearLayout>