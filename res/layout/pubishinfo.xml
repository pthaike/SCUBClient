        android:padding="5dip"
        > --> 
        <TextView 
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:text="@string/infotitle"
             />

         <EditText
             android:id="@+id/infotitle"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:hint="@string/titletishi" 
             />
        <LinearLayout
       		android:orientation="horizontal"
			android:paddingTop="20px"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
   	   		 >
   	   	<ImageButton
			android:id="@+id/qgdatebtn"
			android:src="@drawable/date"
			android:layout_width="40px"
			android:layout_height="40px"
		/>
   	    <!-- <Button
    	    android:id="@+id/qgdatebtn"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
        	android:text="日期" 
        	android:textSize="10dip"
       		 /> -->
        <TextView
            android:id="@+id/publishdate"
             android:layout_width="150px"
		    android:layout_height="wrap_content"
		    android:text="xxxx-xx-xx"
           />
        <ImageButton
			android:id="@+id/qgtimebtn"
			android:src="@drawable/time"
			android:layout_width="40px"
			android:layout_height="40px"
		/>
        <!-- <Button
    	    android:id="@+id/qgtimebtn"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
        	android:text="时间" 
       		 /> -->
        <TextView
            android:id="@+id/qgtime"
             android:layout_width="150px"
		    android:layout_height="wrap_content"
		    android:text="00:00"
           />
        </LinearLayout>

          <TextView 
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:text="@string/infocontext"
             />
        <ScrollView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
         <EditText 
             android:id="@+id/infocontext"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:lines="10"
             android:hint="@string/texttishi"
             />
        </ScrollView>
         <LinearLayout
       		android:orientation="horizontal"
			android:paddingTop="20px"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
   	    >
         <ImageButton
			android:id="@+id/publishbtn"
			android:src="@drawable/submit"
			android:layout_width="120px"
			android:layout_height="70px"
		/>
         <ImageButton
			android:id="@+id/exitbtn"
			android:src="@drawable/exit"
			android:layout_width="120px"
			android:layout_height="70px"
		/>
